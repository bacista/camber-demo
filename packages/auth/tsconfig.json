{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    
    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Path resolution */
    "baseUrl": ".",
    "paths": {
      "react": ["../../camber-deck/node_modules/react"],
      "react-dom": ["../../camber-deck/node_modules/react-dom"],
      "@types/react": ["../../camber-deck/node_modules/@types/react"],
      "@types/react-dom": ["../../camber-deck/node_modules/@types/react-dom"]
    }
  },
  "include": ["src"]
}