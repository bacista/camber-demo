# Camber Deck Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ============================================
# API Configuration
# ============================================
# Port for local API server (default: 3030)
API_PORT=3030

# URL for Vite to connect to the API server
VITE_API_URL=http://localhost:3030

# ============================================
# Redis Session Storage (Upstash)
# ============================================
# Get these from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=<YOUR_UPSTASH_REDIS_REST_URL>
UPSTASH_REDIS_REST_TOKEN=<YOUR_UPSTASH_REDIS_REST_TOKEN>

# ============================================
# Email Service (Resend)
# ============================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=<YOUR_RESEND_API_KEY>

# For testing, use: onboarding@resend.dev
# For production, use your verified domain
RESEND_FROM=onboarding@resend.dev
RESEND_REPLY_TO=onboarding@resend.dev

# ============================================
# Security
# ============================================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=<GENERATE_A_SECURE_RANDOM_SECRET>

# Set to true to restrict access to allowlisted emails only
REQUIRE_ALLOWLIST=false

# ============================================
# Application URLs
# ============================================
# Frontend URL (for CORS configuration in production)
FRONTEND_URL=http://localhost:5173

# Public app URL
NEXT_PUBLIC_APP_URL=http://localhost:5173

# ============================================
# Environment
# ============================================
NODE_ENV=development